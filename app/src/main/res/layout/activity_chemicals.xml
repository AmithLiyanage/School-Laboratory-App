<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChemicalsActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/bar_layout"/>

    <!--<androidx.core.widget.NestedScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_margin="10dp">-->

    <!--<RecyclerView-->
        <!--android:id="@+id/recycler_chemical_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"/>-->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_chemical_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/chemical_name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Chemical Name"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/chemical_avaliable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/chemical_measurement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="g"
                android:textSize="20dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/chemical_avaliable"
                android:layout_alignEnd="@+id/chemical_measurement"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorLightBlue"
                android:text="Recerve" />

        </LinearLayout>

    <!--</androidx.core.widget.NestedScrollView>-->

</LinearLayout>